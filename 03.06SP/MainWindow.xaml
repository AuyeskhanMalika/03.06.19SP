<Window x:Class="_03._06SP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03._06SP"
        mc:Ignorable="d"
        Title="MainWindow" Height="210" Width="500">
    <Window.Resources>
        <ResourceDictionary Source="Theme.xaml"/>
    </Window.Resources>
    <Grid>
        <Button Name="SaveButton" Content="Save" HorizontalAlignment="Left" Height="34" Margin="25,50,0,0" VerticalAlignment="Top" Width="180" Click="SaveButtonClick"/>
        <Button Name="PerformingCalculationsButton" Content="Performing calculations" HorizontalAlignment="Left" Height="34"
                Margin="268,50,0,0" VerticalAlignment="Top" Width="180" Click="PerformingCalculationsButtonClick"/>
        <StatusBar Background="LightBlue" HorizontalAlignment="Left" Margin="0,134,0,0" Width="490" Height="44" VerticalAlignment="Top">
            <ProgressBar Name="progressBar" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="200"/>
            <Label Name="progressLabel" Content="Well done!" Height="24" Width="99" FontWeight="Bold"/>
        </StatusBar>
    </Grid>
</Window>
